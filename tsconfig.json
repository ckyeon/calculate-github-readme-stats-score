{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "target": "es2016",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "actions",
    "bin",
    "commands",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
